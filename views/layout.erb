<!DOCTYPE html>

<html>
  <head>
    <title>Bookmark Manager</title>
  </head>

  <body>
    <% if current_user %>
      <h1>Welcome <%= current_user.name %></h1>
    <% end %>
    <% if flash.now[:errors] %>
    <p><% flash.now[:errors].each do |error| %>
        <%= error %><% end %></p>
    <% end %>
    <%= yield %>
  </body>

</html>

<!DOCTYPE html>

<html>
  <head>
    <title>Bookmark Manager</title>
  </head>

  <body>
    <% if current_user %>
      <h1>Welcome <%= current_user.name %></h1>
    <% end %>
    <% if flash.now[:errors] %>
    <p>Below problems must be resolved:</p>
    <% flash.now[:errors].each do |error| %>
    <ul>
      <li><%= error.pop %></li>
    </ul>
    <% end %>
    <% end %>
    <%= yield %>
  </body>

</html>
